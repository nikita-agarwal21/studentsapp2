<h1>results</h1>



<%= form_tag(results_result_path, :method=>"get" )do %>
    <%= label_tag(:search, "enter usn:")%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("search", :usn=>nil)%>  
<% end %>




<%@learners.each do |learner|%>
    <h1>usn</h1>   <%= learner.usn%>
    <h2>name</h2> <%= learner.name%>
<%end%>  
<table style="border:2px solid black">
<tr><th> course code</th><th>course name</th><th>total</th><th>remarks</th></tr>

<%@subs.each do |sub|%>
    <tr>
    <td><%= sub.course_code%></td><td><%= sub.course_name%></td>

    <%end%>
      
    <%@marks.each do|mark|%>
        <% @cee=mark.cee_obtained%>
        <% @see=mark.see_obtained%>
    
        <% @total= @cee+@see%>
        <td><%=@total%></td>
      
        <%if @total > 45 %>
          <td>  <%= "pass"%></td>
        <%else %>
          <td>  <%= "fail"%></td>
        <%end%>
        </tr> 
    <%end%>
</table>
